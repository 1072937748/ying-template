    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "alwaysStrict": true,
    "watch": true,
    "paths": {
      "@": ["src"],
      "src": ["src"],
      "tests": ["tests"],
      "core": ["core"],
